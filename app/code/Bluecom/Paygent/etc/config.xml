<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <paygent>
                <debug>1</debug>
                <active>0</active>
                <model>PaygentFacade</model>
                <!-- <merchant_gateway_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" /> -->
                <!-- <order_status>pending_payment</order_status> -->
                <payment_action>authorize</payment_action>
                <title>Bluecom Paygent Payment Method</title>
                <currency>USD</currency>
                <connect_url>https://secure.paygent.com</connect_url>
                <connect_url_test>https://test.secure.paygent.com</connect_url_test>
                <sandbox_flag>1</sandbox_flag>
                <test_action>AUTHORISED</test_action>
                <payment_method>card</payment_method>
                <can_initialize>1</can_initialize>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_refund>1</can_refund>
                <!-- <can_void>1</can_void> -->
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <sort_order>1</sort_order>
                <debugReplaceKeys>callbackPW,installation,instId</debugReplaceKeys>
                <!-- <paymentInfoKeys>FRAUD_MSG_LIST</paymentInfoKeys>
                <privateInfoKeys>FRAUD_MSG_LIST</privateInfoKeys> -->
            </paygent>
        </payment>
    </default>
</config>
